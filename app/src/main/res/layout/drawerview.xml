<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:id="@+id/drawerView"
    android:background="#F8F8FF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F8FF"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="0dp"
            android:background="#42424A">

        </LinearLayout>


        <Button
            android:id="@+id/num"
            style="?android:borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button2"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
            android:fontFamily="@font/swagger3"
            android:textColor="#42424A"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="240dp"
            android:layout_marginEnd="-2dp"
            android:background="#42424A">

        </LinearLayout>

        <Button
            android:id="@+id/button2"
            style="?android:borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="90dp"
            android:drawableLeft="@drawable/ic_baseline_filter_frames_24"
            android:fontFamily="@font/swagger3"
            android:text="과제방"
            android:textColor="#42424A"
            android:textSize="25dp" />

        <Button
            android:id="@+id/button3"
            style="?android:borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button2"
            android:layout_alignStart="@+id/button2"
            android:layout_marginStart="0dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
            android:fontFamily="@font/swagger3"
            android:text="달력"
            android:textColor="#42424A"
            android:textSize="25dp" />

        <Button
            android:id="@+id/button4"
            style="?android:borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button3"
            android:layout_alignStart="@+id/button2"
            android:layout_marginStart="0dp"
            android:layout_marginTop="35dp"
            android:drawableLeft="@drawable/ic_baseline_settings_24"
            android:fontFamily="@font/swagger3"
            android:text="설정"
            android:textColor="#42424A"
            android:textSize="25dp" />

        <Button
            android:id="@+id/logout"
            style="?android:borderlessButtonStyle"
            android:layout_width="163dp"
            android:layout_height="44dp"
            android:layout_alignStart="@+id/button2"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="93dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/ic_baseline_login_24"
            android:fontFamily="@font/swagger3"
            android:text="로그아웃"
            android:textColor="#42424A"
            android:textSize="20dp" />

    </RelativeLayout>

</LinearLayout>